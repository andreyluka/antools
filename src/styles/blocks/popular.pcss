.popular {
  margin-bottom: 200px;
  
  &__title-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 110px;
  }

  &__title {
    margin-bottom: 28px;
  }

  &__list {
    display: grid;
    grid-gap: 100px 24px;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: auto;
    margin-bottom: 100px;
  }

  &__load-btn {
    display: table;
    margin: 0 auto 200px;
  }
}